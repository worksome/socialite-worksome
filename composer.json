{
    "name": "worksome/socialite",
    "type": "library",
    "description": "A Worksome provider for Laravel Socialite",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "socialiteproviders/manager": "^4.2"
    },
    "require-dev": {
        "laravel/pint": "^1.1",
        "pestphp/pest": "^1.21",
        "phpstan/phpstan": "^1.8.3",
        "symfony/var-dumper": "^5.4.11 || ^6.0"
    },
    "autoload": {
        "psr-4": {
            "Worksome\\Socialite\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Worksome\\Socialite\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "pint --ansi",
        "test:lint": "pint --test --ansi",
        "test:types": "phpstan analyse --ansi --memory-limit=-1",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
